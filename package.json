{
  "name": "dropbot",
  "version": "1.0.0",
  "description": "A telegram bot that broadcasts trading drops on Foundation and Zora",
  "main": "index.js",
  "scripts": {
    "start": ". ./.env && NODE_ENV=test pm2 start ./index.js --name tradedrop_bot --time && pm2 save",
    "stop": "pm2 stop tradedrop_bot && pm2 delete tradedrop_bot",
    "dev": ". ./.env && NODE_ENV=development nodemon index.js",
    "test": ". ./.env && NODE_ENV=test mocha --timeout 10000 --recursive tests/ --require tests/hooks.js",
    "test:dev": ". ./.env && NODE_ENV=test mocha --timeout 10000 --recursive tests/ --grep='#dev' --require tests/hooks.js --watch",
    "test:unit": "mocha --recursive tests/unit.tests --watch",
    "dev:exportSchema": ". ./SQL/scripts/exportDevSchema.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/littlezigy/traddropbot.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "cryptotokens"
  ],
  "author": "Adesuwa T. Dawodu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/littlezigy/traddropbot/issues"
  },
  "homepage": "https://github.com/littlezigy/traddropbot#readme",
  "dependencies": {
    "axios": "^0.21.0",
    "express": "^4.17.1",
    "node-cron": "^2.0.3",
    "postgresorm": "^4.9.1",
    "rfdc": "^1.1.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "chai-things": "^0.2.0",
    "mocha": "^8.2.0",
    "supertest": "^6.0.0"
  }
}
